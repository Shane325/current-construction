<!DOCTYPE html>
<!-- HTML5 -->

<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="stretched">
    <div id="wrapper" class="clearfix">
        <% include ../components/core/top-bar %>
            <% include ../partials/header %>
                <% include ../components/core/title %>
                    <section id="content">
                        <div class="content-wrap">
                            <div class="container clearfix">
                                <div id="posts" class="post-grid grid-container grid-2 clearfix" data-layout="fitRows">
                                    <% posts.forEach(function(post) { %>
                                        <div class="entry clearfix">
                                            <div class="entry-image">
                                              <a href="/post/<%=post.id %>"><img class="image_fade" src="<%= post.imageUrl %>" alt="<%= post.imageAlt %>" style="height: 350px !important;"></a>
                                            </div>
                                            <div class="entry-title">
                                                <h2>
                                                  <a href="/post/<%=post.id %>">
                                                        <%= post.title %>
                                                    </a>
                                                </h2>
                                            </div>
                                            <ul class="entry-meta clearfix">
                                                <li><i class="icon-calendar3"></i>
                                                    <%= new Date(post.published_at).toLocaleDateString('en-US') %>
                                                </li>
                                                <li><i class="icon-user"></i>
                                                    <%= post.user %>
                                                </li>
                                                <li><i class="icon-folder-open"></i>
                                                    <%= post.category %>
                                                </li>
                                            </ul>
                                            <div class="entry-content">
                                                <p>
                                                    <%=post.preview %>
                                                </p>
                                                <a href="/post/<%=post.id %>" class="more-link">Read More</a>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                    </section>
                    <% include ../partials/footer %>
    </div>
    <% include ../partials/foot %>
</body>

</html>
